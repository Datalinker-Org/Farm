{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "locations": {
      "@id": "[locations](#locations)",
      "@type": "xsd:string",
      "type": "array",
      "items": { "type": "string" },
      "@container": "@set",
      "dldescription": "Location identifier usng a URN-based identification string containing namespace and unique identifier within the namespace. Used as an externally meaningful identifier. e.g. urn:nzl:pri:location:FOL_ID:CL-9587-0176"
    },
    "farmidentifiers": {
      "@id": "[farmidentifiera](#farmidentifiera)",
      "@type": "xsd:string",
      "type": "array",
      "items": { "type": "string" },
      "@container": "@set",
      "dldescription": "A code used by the source system to identify the farm, such as an internally meaningful identifier"
    },
    "farmname": {
      "@id": "[farmname](#farmname)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Farm name. e.g. Smith Farms Ltd"
    },
    "validFrom": {
      "@id": "[ValidFrom](https://github.com/Datalinker-Org/Pasture-Management/blob/master/Pasture-Cover/PastureCoversFarm.md)",
      "@type": "xsd:date",
      "type": "string",
      "dldescription": "Location start date. This is an optional field"
    },
    "validThrough": {
      "@id": "[ValidThrough](https://github.com/Datalinker-Org/Pasture-Management/blob/master/Pasture-Cover/PastureCoversFarm.md)",
      "@type": "xsd:date",
      "type": "string",
      "dldescription": "Location end date. This is an optional field"
    },
    "organization": {
      "@id": "[Organization](#Organization)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[Organization](https://github.com/Datalinker-Org/Shared/blob/master/Organization.md)",
      "dldescription": "The official name or registered name of the organization, e.g. Sheep Improvement Ltd."
    },
    "transactions": {
      "@id": "[Transactions](#Transactions)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[Transaction](Transaction.md)",
      "dldescription": "Link to transactions list of the farm"
    },
    "aggregateTransactions": {
      "@id": "[AggregateTransactions](#AggregateTransactions)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[AggregateTransaction](AggregateTransaction.md)",
      "dldescription": "Link to aggregate transactions list of the farm"
    },
    "balanceSheet": {
      "@id": "[BalanceSheet](#BalanceSheet)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[BalanceSheet](BalanceSheet.md)",
      "dldescription": ""
    },
    "KPIs": {
      "@id": "[KPIs](#KPIs)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[KPI](https://github.com/Datalinker-Org/Benchmarks/blob/master/Benchmark/KPI.md)",
      "dldescription": ""
    }
  }
}
